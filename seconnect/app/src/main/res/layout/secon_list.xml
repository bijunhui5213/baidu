<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp">

    <ImageView
        android:id="@+id/secon_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_5"
        android:src="@drawable/secon_iconun" />

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/secon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/secon_image"
        android:text="awdwadawd"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView

        android:layout_centerVertical="true"
        android:id="@+id/secon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_xiugai"
        android:text="wadwadawd" />

    <ImageView
        android:src="@drawable/home_init"
        android:id="@+id/img_xiugai"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
       />


</RelativeLayout>